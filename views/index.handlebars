<h1>Eat-Da-Burger!</h1>
<br>
<br>
<h2>Add a Burger</h2>
<br>
<form class="create-form center1">

  <div class="form-group">
    <label for="burg">Burger:</label>
    <input type="text" id="burg" name="burger_name" placeholder="Type Burger Name Here">
  </div>


  <div class="form-group center2">
    <label for="devoured">Devoured?</label><br>

    <input type="radio" name="devoured" value="0" checked> Needs to be Devoured!
    <br>
    <input type="radio" name="devoured" value="1"> Devoured!
  </div>

  <button type="submit">Add Burger</button>
</form>
<br>
<br>

<h2>Burgers waiting TO BE DEVOURED</h2>

<ul class="center3">
  {{#each burgers}}
  {{#unless devoured}}
  <p>{{id}}. {{burger_name}}
    <span><button class="change-devour" data-id="{{id}}" data-newdevour=true>
        {{#if devoured}}devoured!{{else}}devour me!{{/if}}
      </button></span>
  </p>
  {{/unless}}
  {{/each}}
</ul>

<h2>DEVOURED Burgers</h2>

<ul class="center4">
  {{#each burgers}}
  {{#if devoured}}
  <p>{{id}}. {{burger_name}}</p>
  {{/if}}
  {{/each}}
</ul>